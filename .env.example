# Pi-hole Network Analyzer Environment Variables
# Copy this file to .env and update with your Pi-hole details

# Required Pi-hole Configuration
PIHOLE_HOST=192.168.1.100
PIHOLE_API_PASSWORD=your-api-token-here

# Optional Pi-hole Configuration
PIHOLE_PORT=80
PIHOLE_USE_HTTPS=false
PIHOLE_API_TIMEOUT=30

# Web Interface (for dashboard)
WEB_ENABLED=true
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_DAEMON_MODE=true

# Logging Configuration
LOG_LEVEL=info
LOG_ENABLE_COLORS=true
LOG_ENABLE_EMOJIS=true

# Analysis Options
ANALYSIS_ONLINE_ONLY=false

# Metrics (Prometheus)
METRICS_ENABLED=true
METRICS_HOST=0.0.0.0
METRICS_PORT=9090

# Container Optimization (Go runtime)
GOMEMLIMIT=128MiB
GOMAXPROCS=2